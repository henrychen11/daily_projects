<h1>This is the Album New Page!</h1>

<%= render "shared/errors" %>

<form action="<%= albums_url%>" method="post">
  <%= auth_token %>
  <label>Album Title: </label>
  <input type="text" name="album[title]" value="">

  <label>Album Year: </label>
  <input type="year" name="album[year]" value="">

  <label>Live?</label>
  <input type="radio" name="live[true]" value="Yes">
  <input type="radio" name="live[false]" value="No">

  <label>Band ID</label>
  <input type="dropdown" name="album[band_id]" value="">

  <input type="submit" name="" value="Add New Album">
</form>
